<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Текущая информация о профиле" />

    <android.support.design.widget.TextInputLayout
        style="@style/bt_text_input_layout"
        android:layout_weight="1"
        android:labelFor="@+id/first_name"
        android:paddingEnd="0dp"
        tools:ignore="RtlCompat">

        <com.braintreepayments.cardform.view.ErrorEditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя"
            android:textSize="15sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/bt_text_input_layout"
        android:layout_weight="1"
        android:labelFor="@+id/last_name"
        android:paddingEnd="0dp"
        tools:ignore="RtlCompat">

        <com.braintreepayments.cardform.view.ErrorEditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Фамилия"
            android:textSize="15sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/bt_text_input_layout"
        android:layout_weight="1"
        android:labelFor="@+id/phone"
        android:paddingEnd="0dp"
        tools:ignore="RtlCompat">

        <com.braintreepayments.cardform.view.ErrorEditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Номер телефона"
            android:inputType="number"
            android:textSize="15sp" />

    </android.support.design.widget.TextInputLayout>

    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:id="@+id/save"
        android:text="Сохранить"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>